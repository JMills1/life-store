<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleDisplayName</key>
	<string>LifePlanner</string>
	
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	
	<key>CFBundleVersion</key>
	<string>1</string>
	
	<key>CFBundleShortVersionString</key>
	<string>1.0</string>
	
	<!-- AdMob Configuration -->
	<key>GADApplicationIdentifier</key>
	<string>ca-app-pub-3940256099942544~1458002511</string>
	
	<!-- Background Modes -->
	<key>UIBackgroundModes</key>
	<array>
		<string>remote-notification</string>
	</array>
	
	<!-- Privacy Descriptions -->
	<key>NSUserTrackingUsageDescription</key>
	<string>We use tracking to show you relevant ads and improve your experience</string>
	
	<key>NSCalendarsUsageDescription</key>
	<string>LifePlanner needs access to sync your events with the system calendar</string>
	
	<key>NSRemindersUsageDescription</key>
	<string>LifePlanner needs access to create reminders for your tasks</string>
	
	<key>NSPhotoLibraryUsageDescription</key>
	<string>Upload photos to your notes and events</string>
	
	<key>NSCameraUsageDescription</key>
	<string>Take photos for your notes and events</string>
	
	<!-- App Transport Security -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSAllowsArbitraryLoads</key>
		<false/>
	</dict>
	
	<!-- Supported interface orientations -->
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
</dict>
</plist>

